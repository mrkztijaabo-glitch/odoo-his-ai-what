<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_his_encounter_tree" model="ir.ui.view">
    <field name="name">his.encounter.tree</field>
    <field name="model">his.encounter</field>
    <field name="arch" type="xml">
      <tree>
        <field name="patient_id"/>
        <field name="start_datetime"/>
        <field name="chief_complaint"/>
        <field name="temperature_c"/>
        <field name="systolic_bp"/>
        <field name="diastolic_bp"/>
      </tree>
    </field>
  </record>

  <record id="view_his_encounter_form" model="ir.ui.view">
    <field name="name">his.encounter.form</field>
    <field name="model">his.encounter</field>
    <field name="arch" type="xml">
      <form string="Encounter">
        <sheet>
          <group>
            <group>
              <field name="patient_id"/>
              <field name="start_datetime"/>
              <field name="end_datetime"/>
              <field name="chief_complaint"/>
            </group>
            <group string="Vitals">
              <field name="height_cm"/>
              <field name="weight_kg"/>
              <field name="temperature_c"/>
              <field name="systolic_bp"/>
              <field name="diastolic_bp"/>
            </group>
          </group>
          <notebook>
            <page string="Notes"><field name="notes"/></page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="action_his_encounter" model="ir.actions.act_window">
    <field name="name">Encounters</field>
    <field name="res_model">his.encounter</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
