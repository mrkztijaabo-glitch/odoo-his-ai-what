<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_his_prescription_tree" model="ir.ui.view">
    <field name="name">his.prescription.tree</field>
    <field name="model">his.prescription</field>
    <field name="arch" type="xml">
      <tree>
        <field name="patient_id"/>
        <field name="drug_name"/>
        <field name="dose"/>
        <field name="frequency"/>
        <field name="duration"/>
        <field name="status"/>
      </tree>
    </field>
  </record>

  <record id="view_his_prescription_form" model="ir.ui.view">
    <field name="name">his.prescription.form</field>
    <field name="model">his.prescription</field>
    <field name="arch" type="xml">
      <form string="Prescription">
        <sheet>
          <group>
            <group>
              <field name="patient_id"/>
              <field name="encounter_id"/>
            </group>
            <group>
              <field name="drug_name"/>
              <field name="dose"/>
              <field name="route"/>
              <field name="frequency"/>
              <field name="duration"/>
            </group>
          </group>
          <group>
            <field name="notes"/>
            <field name="status"/>
          </group>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="action_his_prescription" model="ir.actions.act_window">
    <field name="name">Prescriptions</field>
    <field name="res_model">his.prescription</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
