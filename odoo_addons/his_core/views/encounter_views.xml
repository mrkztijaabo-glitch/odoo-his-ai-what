<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_his_encounter_tree" model="ir.ui.view">
    <field name="name">his.encounter.tree</field>
    <field name="model">his.encounter</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="encounter_datetime"/>
        <field name="patient_id"/>
        <field name="chief_complaint"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_his_encounter_form" model="ir.ui.view">
    <field name="name">his.encounter.form</field>
    <field name="model">his.encounter</field>
    <field name="arch" type="xml">
      <form string="Encounter">
        <header>
          <button name="action_close" type="object" string="Close" states="draft" class="oe_highlight"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,closed"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" readonly="1"/>
              <field name="patient_id" options="{'no_create': True}"/>
              <field name="encounter_datetime"/>
            </group>
            <group>
              <field name="chief_complaint"/>
            </group>
          </group>
          <notebook>
            <page string="Vitals">
              <group>
                <field name="vitals_temp_c"/>
                <field name="vitals_bp_systolic"/>
                <field name="vitals_bp_diastolic"/>
                <field name="vitals_pulse"/>
                <field name="vitals_spo2"/>
              </group>
            </page>
            <page string="Problems / Impression">
              <field name="problems"/>
            </page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>
</odoo>
