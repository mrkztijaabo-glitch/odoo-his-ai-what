<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_his_patient_tree" model="ir.ui.view">
    <field name="name">his.patient.tree</field>
    <field name="model">his.patient</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="phone"/>
        <field name="email"/>
      </tree>
    </field>
  </record>

  <record id="view_his_patient_form" model="ir.ui.view">
    <field name="name">his.patient.form</field>
    <field name="model">his.patient</field>
    <field name="arch" type="xml">
      <form string="Patient">
        <sheet>
          <group>
            <field name="name"/>
            <field name="phone"/>
            <field name="email"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_his_patient" model="ir.actions.act_window">
    <field name="name">Patients</field>
    <field name="res_model">his.patient</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_his_root" name="HIS Core"/>
  <menuitem id="menu_his_patient" name="Patients" parent="menu_his_root" action="action_his_patient"/>
</odoo>
