<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_his_patient_tree" model="ir.ui.view">
    <field name="name">his.patient.tree</field>
    <field name="model">his.patient</field>
    <field name="arch" type="xml">
      <tree>
        <field name="patient_code"/>
        <field name="name"/>
        <field name="sex"/>
        <field name="dob"/>
        <field name="phone_mobile_e164"/>
        <field name="whatsapp_opt_in"/>
      </tree>
    </field>
  </record>

  <record id="view_his_patient_form" model="ir.ui.view">
    <field name="name">his.patient.form</field>
    <field name="model">his.patient</field>
    <field name="arch" type="xml">
      <form string="Patient">
        <sheet>
          <group>
            <group>
              <field name="patient_code" readonly="1"/>
              <field name="name"/>
              <field name="sex"/>
              <field name="dob"/>
            </group>
            <group>
              <field name="phone_mobile_e164"/>
              <field name="whatsapp_opt_in"/>
              <field name="preferred_language"/>
              <field name="quiet_hours"/>
            </group>
          </group>
          <notebook>
            <page string="Notes"><field name="notes"/></page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>
</odoo>
